{
  "name": "fastify-starter",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "check": "tsc --noEmit",
    "dev": "NODE_ENV=development DEBUG=1 npx ts-node-dev src/index.ts | npx pino-pretty",
    "start": "node dist/index.js",
    "test": "jest --no-cache",
    "test:ci": "jest --silent",
    "db:generate": "drizzle-kit generate:pg",
    "db:check": "drizzle-kit check:pg",
    "db:drop": "drizzle-kit drop",
    "db:migrate": "npx tsx ./migrate.ts",
    "docker:down": "docker compose -f docker/compose.yml down",
    "docker:up": "docker compose -f docker/compose.yml up -d",
    "docker:kill": "docker compose -f docker/compose.yml down -v --remove-orphans",
    "docker:restart": "pnpm run docker:down && pnpm run docker:up"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "transformIgnorePatterns": [
      "^.+\\.js$"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "9.0.3",
    "drizzle-kit": "0.19.13",
    "jest": "^29.6.4",
    "pino-pretty": "^10.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "3.12.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fastify/cookie": "9.0.4",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/swagger": "^8.9.0",
    "argon2": "0.31.0",
    "drizzle-orm": "0.28.5",
    "fastify": "^4.22.0",
    "fastify-cors": "^6.1.0",
    "fastify-sensible": "^3.2.0",
    "ioredis": "^5.3.2",
    "node-fetch": "^3.3.2",
    "pino": "^8.15.0",
    "postgres": "3.3.5",
    "uuid": "9.0.0",
    "zod": "3.22.2",
    "zod-validation-error": "1.5.0"
  }
}
